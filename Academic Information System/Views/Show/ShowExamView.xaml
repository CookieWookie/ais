<UserControl x:Class="AiS.Views.ShowExamView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             MinHeight="300" MinWidth="300">
    <Grid>
        <Button HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="15" Height="15" 
                Style="{StaticResource CloseButtonStyle}" Command="{Binding CloseCommand}"/>
        <Button x:Name="refreshButton" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" 
                Width="15" Height="15" Command="{Binding RefreshCommand}"/>
        <DataGrid x:Name="examDataGrid" Margin="10,30,10,115" 
                  ItemsSource="{Binding Data, UpdateSourceTrigger=PropertyChanged}" SelectionMode="Single" SelectionUnit="FullRow">
            <DataGrid.Columns>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource CloseButtonStyle}" 
                                    Margin="0"
                                    Command="{Binding DeleteCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}" 
                                    CommandParameter="{Binding SelectedItem, ElementName=examDataGrid}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Čas" Binding="{Binding Time, UpdateSourceTrigger=PropertyChanged}"/>
                <DataGridTextColumn Header="Učiteľ" Binding="{Binding Teacher, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource TeacherConverter}}"/>
                <DataGridTextColumn Header="Predmet" Binding="{Binding Subject, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource SubjectConverter}}"/>
                <DataGridTextColumn Header="Počet študentov" Binding="{Binding SignedStudents.Count}"/>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid x:Name="signedStudentsDataGrid" Margin="10,0,10,10" VerticalAlignment="Bottom" Height="100" 
                  ItemsSource="{Binding SelectedItem.SignedStudents, UpdateSourceTrigger=PropertyChanged, ElementName=examDataGrid}" SelectionMode="Single"
                  SelectionUnit="FullRow">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Meno" Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                <DataGridTextColumn Header="Priezvisko" Binding="{Binding Lastname, UpdateSourceTrigger=PropertyChanged}"/>
                <DataGridTextColumn Header="Semester" Binding="{Binding Semester, UpdateSourceTrigger=PropertyChanged}"/>
                <DataGridTextColumn Header="Dátum nar." Binding="{Binding DateOfBirth}"/>
                <DataGridTextColumn Header="Študíjny program" Binding="{Binding StudyProgramme, Converter={StaticResource StudyProgrammeConverter}}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
